.bgClr{
  height: 100%;
  width:100%;
}
.top-tab{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: stretch;
  width: 750rpx;
  height: 100rpx;
  font-size: 32rpx;
  line-height: 100rpx;
  box-shadow: 0 2px 2px #bebebe;
  margin: 0 0 8rpx 0;
  position: fixed;
  top: 0;
  z-index: 9999;
}
.top.tab.clr1{
  background: #298DE5;
  color: #8CCEFD;
}
.top.tab.clr2{
  background: 	#FF1493;
  color: #fcadd8;
}
.toptab.active{
  color: #ffffff;
  border-bottom: solid 2px #ffffff;
}
/* 主体容器 */
.container{
  background: #fff;
  width: 750rpx;
  display: flex;
  flex-flow: column nowrap;
  padding: 20rpx 20rpx;
  margin: 85rpx 0;
}
.container .cnt0{
  width: 680rpx;
  background-color: #fff;
  padding: 5rpx 20rpx 5rpx 20rpx;
  margin-bottom: 5rpx;
  border-bottom: #F0F4F3 solid 4rpx;
}
.container .head{
  background-color: #fff;
  display: flex;
  flex-flow: row nowrap;
  padding: 20rpx 22rpx 20rpx 22rpx;
}
.container .cnt0 .head image{
  display: inline-block;
  width: 70rpx;
  height: 70rpx;
  border-radius: 70rpx;
}
.container .cnt0 .head .text{
  display: flex;
  flex-flow: column nowrap;
  position: relative;
  left: 20rpx;
}
.container .cnt0 .head .name{
  font-size: 28rpx;
}
.container .cnt0 .head .time{
  font-size: 26rpx;
  color: #999;
}

.container .content{
  height: 164rpx;
  background-color: #f6f6f6;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  border-radius: 30rpx;
  padding: 25rpx 22rpx 20rpx 22rpx;
  border-right: #bebebe solid 3rpx;
  border-bottom: #bebebe solid 3rpx;
  margin-bottom: 20rpx;
}
.container .content .text{
  width: 500rpx;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-around;
}
.container .content .title{
  font-size: 28rpx;
  font-weight: bold;
}
.container .content .info{
  font-size: 26rpx;
  color: #999;
  line-height: 50rpx;
}
.container .content image{
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
}

.container .cnt1{
  margin-bottom: 5rpx;
  background-color: #fff;
  width: 100%;
}
.container .cnt1 .allread{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  padding: 20rpx 10rpx;
  background-color: #F0F4F3;
}
.container .cnt1 .allread .list{
  height: 70rpx;
  line-height: 70rpx;
}
.container .cnt1 .allread .txt{
  width: 150rpx;
  height: 70rpx;
  border: 1rpx solid #d4d4d4;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  line-height: 70rpx;
  border-radius: 8rpx;
}
.container .cnt1 .allread image{
  display: inline-block;
  width: 45rpx;
  height: 45rpx;
}

.container .cnt1 .notifylist{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  background-color: #fff;
  width: 100%;
  padding: 20rpx 10rpx;
  border-bottom: #F0F4F3 solid 4rpx;
}
.container .cnt1 .notifylist .info{
  position: relative;
  left: -20rpx;
  line-height: 45rpx;
}
.container .cnt1 .notifylist image{
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
}
.container .cnt1 .notifylist .name text{
  font-size: 28rpx;
  font-weight: 550;
}
.container .cnt1 .notifylist .text,.time{
  font-size: 26rpx;
  color: #999;
}
.container .cnt1 .notifylist .text{
  width: 400rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}