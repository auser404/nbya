.noHead{
  background-color: #fff;
}
.foot_mini_btn{
  color: #4eb9f7;
}
.submit_info{
  display: flex;
  justify-content: center;
  align-items:center;
  width:60%;
  height:88rpx;
  line-height:88rpx;
  text-align:center;
  font-size:24px;
  color:#fff;
  background: #FFD700;
  /* background:linear-gradient(to right,rgba(72,222,223,1.00),rgba(42,154,225,1.00)); */
