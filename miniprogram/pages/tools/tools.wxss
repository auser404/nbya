.topbox{ 
  background-color: #00444d;
  height: 300rpx;
  margin:0 50rpx 20rpx 50rpx;
  width:650rpx;
  display: flex;
  justify-content: center;  /* 水平居中 */
  align-items: center;  /* 垂直居中 */
}
.toptxt{
  position: absolute;
  top:100rpx;
  left:100rpx;
  font-size: 100rpx;
  color:white;
}
.img{
  height: 120rpx;
