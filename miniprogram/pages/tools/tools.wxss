}
.box{
  border-width: 0 8rpx 0 0;
  border-style: solid;
  border-color:black;
  font-size: 50rpx;
  height: 120rpx;
  width: 60%;
  border-radius: 30px;
  margin-top: 10%;  
  display: flex;
  justify-content: center;  /* 水平居中 */
  align-items: center;  /* 垂直居中 */
}
